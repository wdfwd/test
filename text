#include"stdio.h"
#include<windows.h>
#include<conio.h>
#define ROW 9
#define COL 11

char map[ROW][COL+1]={
	{"*#*********"},
	{"***###*###*"},
	{"###**#****#"},
	{"*#**###**#*"},
	{"***********"},
	{"#####*##*##"},
	{"**#*****#*E"},
	{"***#*###**#"},
	{"*#*********"},
};

void print_map()
{
	for(int i=0;i<ROW;i++)
		puts(map[i]);
}
void a(int x,int y)
{
	COORD pos;
	pos.X=x;
	pos.Y=y;
	printf("curX=%d,curY=%d\n",x,y);
	SetConsoleCursorPosition(GetStdHandle(STD_OUTPUT_HANDLE),pos);
	
}

int curX,curY;
int main()
{
	while(1)
	{
		print_map();
		a(curX,curY);
		char t=getch();
		if(t=='w')
		{
			//向上走
			if((curY-1)>=0 && map[curY-1][curX]=='*') curY--;
		}
		else if(t=='s')
		{
			//向下走
			if((curY+1)<ROW && map[curY+1][curX]=='*') curY++;
		}
		else if(t=='a')
		{
			//向左走
			if((curX-1)>=0 && map[curY][curX-1]=='*') curX--;
		}
		else if(t=='d')
		{
			//向右走
			if((curX+1)<=COL && map[curY][curX+1]=='*') curX++;
		}
		if(t=='E') break;
	}
	return 0;
}
